<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
     >
        <!--  
        <TextView
            android:id="@+id/list_longdistance_numaccept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            />-->
         <TextView
            android:id="@+id/list_longdistance_requesttime"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="16dp"         
            />

        <TextView
            android:id="@+id/list_longdistance_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/list_longdistance_price"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="16dp"/>
        
       <LinearLayout
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal">
        
        
        <TextView
            android:id="@+id/list_longdistance_yes"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#f8981d"
            android:gravity="center"
            android:text="승인"
            android:textSize="16dp"
            android:textColor="@android:color/white"/>
        
         <TextView
            android:id="@+id/list_longdistance_no"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="거절"
            android:textSize="16dp"
            android:background="#f8981d"/>
        
         </LinearLayout>

</LinearLayout>